# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Railway Configuration
RAILWAY_PUBLIC_DOMAIN=your-app-name.railway.app

# Supabase Configuration (Railway will provide these)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Configuration (if using external DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gmail_agent_db
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Configuration (for sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Gmail OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-app-name.railway.app/auth/google/callback

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Webhook Configuration
N8N_WEBHOOK_URL=https://your-n8n-webhook-url.com
WEBHOOK_BASE_URL=https://your-webhook-endpoint.com
WEBHOOK_SECRET=your_webhook_secret

# Session Configuration
SESSION_SECRET=your_session_secret_here

# CORS Configuration
CORS_ORIGIN=https://your-app-name.railway.app

# Pub/Sub Configuration (for Gmail push notifications)
PUBSUB_TOPIC=projects/your-project/topics/gmail-push

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log